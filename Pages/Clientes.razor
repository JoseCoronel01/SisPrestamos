@page "/clientes"
@using Microsoft.JSInterop
@using SisPrestamos.Model
@using SisPrestamos.Service
@inject ClienteService ClienteService
@inject ExcelExportService ExcelExportService
@inject ExcelImportService ExcelImportService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<div class="container-fluid p-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2>Gestión de Clientes</h2>
            <button class="btn btn-success mb-3" @onclick="AbrirFormulario">Nuevo Cliente</button>
            <button class="btn btn-info mb-3 ms-2" @onclick="ExportarExcel">Exportar a Excel</button>
            <button class="btn btn-warning mb-3 ms-2" @onclick="AbrirImportador">Importar Excel</button>
        </div>
    </div>

    @if (MostrarImportador)
    {
        <div class="card mb-4">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">Importar Clientes desde Excel</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-8">
                        <label class="form-label">Selecciona un archivo Excel</label>
                        <InputFile OnChange="ManejarCargaArchivo" accept=".xlsx,.xls" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <button type="button" class="btn btn-warning me-2" @onclick="ImportarClientesDesdeExcel" disabled="@(ArchivoSeleccionado == null)">Importar</button>
                        <button type="button" class="btn btn-secondary" @onclick="CerrarImportador">Cancelar</button>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(MensajeImportacion))
                {
                    <div class="alert @(MensajeImportacionExito ? "alert-success" : "alert-danger") mt-3" role="alert">
                        @MensajeImportacion
                    </div>
                }
            </div>
        </div>
    }

    @if (MostrarFormulario)
    {
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">@(EdicionId > 0 ? "Editar Cliente" : "Nuevo Cliente")</h5>
            </div>
            <div class="card-body">
                <form>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Nombre</label>
                            <input type="text" class="form-control" @bind="FormularioCliente.Name" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Teléfono</label>
                            <input type="text" class="form-control" @bind="FormularioCliente.Phone" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control" @bind="FormularioCliente.Email" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Dirección</label>
                            <input type="text" class="form-control" @bind="FormularioCliente.Address" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Ciudad</label>
                            <input type="text" class="form-control" @bind="FormularioCliente.City" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Estado</label>
                            <input type="text" class="form-control" @bind="FormularioCliente.State" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">País</label>
                            <input type="text" class="form-control" @bind="FormularioCliente.Country" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <button type="button" class="btn btn-success me-2" @onclick="GuardarCliente">Guardar</button>
                            <button type="button" class="btn btn-secondary" @onclick="CerrarFormulario">Cancelar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Listado de Clientes</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Nombre</th>
                                    <th>Teléfono</th>
                                    <th>Email</th>
                                    <th>Ciudad</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cliente in ListaClientes)
                                {
                                    <tr>
                                        <td>@cliente.Id</td>
                                        <td>@cliente.Name</td>
                                        <td>@cliente.Phone</td>
                                        <td>@cliente.Email</td>
                                        <td>@cliente.City</td>
                                        <td>
                                            <button class="btn btn-sm btn-primary" @onclick="() => EditarCliente(cliente)">Editar</button>
                                            <button class="btn btn-sm btn-danger" @onclick="() => EliminarCliente(cliente.Id)">Eliminar</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<Cliente> ListaClientes = new();
    private Cliente FormularioCliente = new();
    private bool MostrarFormulario = false;
    private bool MostrarImportador = false;
    private int EdicionId = 0;
    private IBrowserFile? ArchivoSeleccionado;
    private string MensajeImportacion = "";
    private bool MensajeImportacionExito = false;

    protected override async Task OnInitializedAsync()
    {
        await CargarClientes();
    }

    private async Task CargarClientes()
    {
        ListaClientes = await ClienteService.GetAllAsync();
    }

    private void AbrirFormulario()
    {
        FormularioCliente = new Cliente();
        EdicionId = 0;
        MostrarFormulario = true;
    }

    private void CerrarFormulario()
    {
        MostrarFormulario = false;
        FormularioCliente = new Cliente();
        EdicionId = 0;
    }

    private async Task GuardarCliente()
    {
        if (EdicionId > 0)
        {
            FormularioCliente.Id = EdicionId;
            await ClienteService.UpdateAsync(FormularioCliente);
        }
        else
        {
            await ClienteService.AddAsync(FormularioCliente);
        }
        await CargarClientes();
        CerrarFormulario();
    }

    private void EditarCliente(Cliente cliente)
    {
        FormularioCliente = new Cliente
        {
            Id = cliente.Id,
            Name = cliente.Name,
            Phone = cliente.Phone,
            Email = cliente.Email,
            Address = cliente.Address,
            City = cliente.City,
            State = cliente.State,
            Country = cliente.Country
        };
        EdicionId = cliente.Id;
        MostrarFormulario = true;
    }

    private async Task EliminarCliente(int id)
    {
        if (await ConfirmarEliminacion())
        {
            await ClienteService.DeleteAsync(id);
            await CargarClientes();
        }
    }

    private void AbrirImportador()
    {
        ArchivoSeleccionado = null;
        MensajeImportacion = "";
        MostrarImportador = true;
    }

    private void CerrarImportador()
    {
        MostrarImportador = false;
        ArchivoSeleccionado = null;
        MensajeImportacion = "";
    }

    private void ManejarCargaArchivo(InputFileChangeEventArgs e)
    {
        ArchivoSeleccionado = e.File;
    }

    private async Task ImportarClientesDesdeExcel()
    {
        if (ArchivoSeleccionado == null) return;

        try
        {
            using (var stream = ArchivoSeleccionado.OpenReadStream())
            {
                var (clientesImportados, mensaje) = await ExcelImportService.ImportClientesFromExcelAsync(stream);
                MensajeImportacion = mensaje;
                MensajeImportacionExito = clientesImportados.Count > 0;

                if (clientesImportados.Count > 0)
                {
                    foreach (var cliente in clientesImportados)
                    {
                        await ClienteService.AddAsync(cliente);
                    }
                    await CargarClientes();

                    // Limpiar después de éxito
                    await Task.Delay(2000);
                    CerrarImportador();
                }
            }
        }
        catch (Exception ex)
        {
            MensajeImportacion = $"Error: {ex.Message}";
            MensajeImportacionExito = false;
        }
    }

    private async Task<bool> ConfirmarEliminacion()
    {
        return await JSRuntime.InvokeAsync<bool>("confirm", "¿Deseas eliminar este cliente?");
    }

    private async Task ExportarExcel()
    {
        var contenido = ExcelExportService.ExportClientesToExcel(ListaClientes);
        var nombreArchivo = $"Clientes_{DateTime.Now:yyyyMMdd_HHmmss}.xlsx";
        await DescargarArchivo(contenido, nombreArchivo);
    }

    private async Task DescargarArchivo(byte[] contenido, string nombreArchivo)
    {
        await JSRuntime.InvokeVoidAsync("downloadFile", nombreArchivo, Convert.ToBase64String(contenido));
    }
}
