@page "/pagos"
@using Microsoft.JSInterop
@using SisPrestamos.Model
@using SisPrestamos.Service
@inject ClienteService ClienteService
@inject CreditoService CreditoService
@inject LineaService LineaService
@inject PagoService PagoService
@inject ExcelExportService ExcelExportService
@inject ExcelImportService ExcelImportService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<div class="container-fluid p-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2>Gestión de Pagos</h2>
            <button class="btn btn-warning mb-3" @onclick="AbrirFormulario">Registrar Pago</button>
            <button class="btn btn-info mb-3 ms-2" @onclick="ExportarExcel">Exportar a Excel</button>
            <button class="btn btn-warning mb-3 ms-2" @onclick="AbrirImportador">Importar Excel</button>
        </div>
    </div>

    @if (MostrarImportador)
    {
        <div class="card mb-4">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">Importar Pagos desde Excel</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-8">
                        <label class="form-label">Selecciona un archivo Excel</label>
                        <InputFile OnChange="ManejarCargaArchivo" accept=".xlsx,.xls" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <button type="button" class="btn btn-warning me-2" @onclick="ImportarPagosDesdeExcel" disabled="@(ArchivoSeleccionado == null)">Importar</button>
                        <button type="button" class="btn btn-secondary" @onclick="CerrarImportador">Cancelar</button>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(MensajeImportacion))
                {
                    <div class="alert @(MensajeImportacionExito ? "alert-success" : "alert-danger") mt-3" role="alert">
                        @MensajeImportacion
                    </div>
                }
            </div>
        </div>
    }

    @if (MostrarFormulario)
    {
        <div class="card mb-4">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">@(EdicionId > 0 ? "Editar Pago" : "Registrar Nuevo Pago")</h5>
            </div>
            <div class="card-body">
                <form>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Crédito</label>
                            <select class="form-select" @bind="FormularioPago.CreditoId">
                                <option value="0">Seleccionar crédito...</option>
                                @foreach (var credito in ListaCreditos)
                                {
                                    var linea = ListaLineas.FirstOrDefault(l => l.Id == credito.LineaId);
                                    var cliente = ListaClientes.FirstOrDefault(c => c.Id == linea?.ClienteId);
                                    <option value="@credito.Id">@cliente?.Name - Crédito #@credito.Id - $@credito.Importe.ToString("F2")</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Importe a Pagar</label>
                            <input type="number" class="form-control" step="0.01" @bind="FormularioPago.Importe" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <button type="button" class="btn btn-warning me-2" @onclick="GuardarPago">Guardar</button>
                            <button type="button" class="btn btn-secondary" @onclick="CerrarFormulario">Cancelar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    }

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Filtros</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Filtrar por Cliente</label>
                            <select class="form-select" @onchange="FiltrarPorCliente">
                                <option value="0">Todos los clientes</option>
                                @foreach (var cliente in ListaClientes)
                                {
                                    <option value="@cliente.Id">@cliente.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Filtrar por Fecha</label>
                            <input type="date" class="form-control" @onchange="FiltrarPorFecha" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Listado de Pagos</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Cliente</th>
                                    <th>Crédito</th>
                                    <th>Importe</th>
                                    <th>Fecha</th>
                                    <th>Hora</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var pago in PagosFiltrados)
                                {
                                    var credito = ListaCreditos.FirstOrDefault(c => c.Id == pago.CreditoId);
                                    var linea = ListaLineas.FirstOrDefault(l => l.Id == credito?.LineaId);
                                    var cliente = ListaClientes.FirstOrDefault(c => c.Id == linea?.ClienteId);
                                    <tr>
                                        <td>@pago.Id</td>
                                        <td>@cliente?.Name</td>
                                        <td>@pago.CreditoId</td>
                                        <td>$@pago.Importe.ToString("F2")</td>
                                        <td>@pago.Fecha.ToShortDateString()</td>
                                        <td>@pago.Hora.ToString(@"hh\:mm\:ss")</td>
                                        <td>
                                            <button class="btn btn-sm btn-primary" @onclick="() => EditarPago(pago)">Editar</button>
                                            <button class="btn btn-sm btn-danger" @onclick="() => EliminarPago(pago.Id)">Eliminar</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Resumen de Pagos</h5>
                </div>
                <div class="card-body">
                    <p><strong>Total de Pagos Registrados:</strong> $@PagosFiltrados.Sum(p => p.Importe).ToString("F2")</p>
                    <p><strong>Cantidad de Pagos:</strong> @PagosFiltrados.Count</p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<Cliente> ListaClientes = new();
    private List<Linea> ListaLineas = new();
    private List<Credito> ListaCreditos = new();
    private List<Pago> ListaPagos = new();
    private List<Pago> PagosFiltrados = new();
    private Pago FormularioPago = new();
    private bool MostrarFormulario = false;
    private bool MostrarImportador = false;
    private int EdicionId = 0;
    private int FiltroClienteId = 0;
    private DateTime? FiltroFecha = null;
    private IBrowserFile? ArchivoSeleccionado;
    private string MensajeImportacion = "";
    private bool MensajeImportacionExito = false;

    protected override async Task OnInitializedAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        ListaClientes = await ClienteService.GetAllAsync();
        ListaLineas = await LineaService.GetAllAsync();
        ListaCreditos = await CreditoService.GetAllAsync();
        ListaPagos = await PagoService.GetAllAsync();
        AplicarFiltros();
    }

    private void AbrirFormulario()
    {
        FormularioPago = new Pago();
        EdicionId = 0;
        MostrarFormulario = true;
    }

    private void CerrarFormulario()
    {
        MostrarFormulario = false;
        FormularioPago = new Pago();
        EdicionId = 0;
    }

    private async Task GuardarPago()
    {
        if (EdicionId > 0)
        {
            FormularioPago.Id = EdicionId;
            await PagoService.UpdateAsync(FormularioPago);
        }
        else
        {
            await PagoService.AddAsync(FormularioPago);
        }
        await CargarDatos();
        CerrarFormulario();
    }

    private void EditarPago(Pago pago)
    {
        FormularioPago = new Pago
        {
            Id = pago.Id,
            CreditoId = pago.CreditoId,
            Importe = pago.Importe,
            Fecha = pago.Fecha,
            Hora = pago.Hora
        };
        EdicionId = pago.Id;
        MostrarFormulario = true;
    }

    private async Task EliminarPago(int id)
    {
        if (await ConfirmarEliminacion())
        {
            await PagoService.DeleteAsync(id);
            await CargarDatos();
        }
    }

    private void FiltrarPorCliente(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out var clienteId))
        {
            FiltroClienteId = clienteId;
            AplicarFiltros();
        }
    }

    private void FiltrarPorFecha(ChangeEventArgs e)
    {
        if (DateTime.TryParse(e.Value?.ToString(), out var fecha))
        {
            FiltroFecha = fecha;
            AplicarFiltros();
        }
        else
        {
            FiltroFecha = null;
            AplicarFiltros();
        }
    }

    private void AplicarFiltros()
    {
        PagosFiltrados = ListaPagos.Where(p =>
        {
            var credito = ListaCreditos.FirstOrDefault(c => c.Id == p.CreditoId);
            var linea = ListaLineas.FirstOrDefault(l => l.Id == credito?.LineaId);

            var filtroCliente = FiltroClienteId == 0 || linea?.ClienteId == FiltroClienteId;
            var filtroFecha = FiltroFecha == null || p.Fecha.Date == FiltroFecha.Value.Date;

            return filtroCliente && filtroFecha;
        }).ToList();
    }

    private async Task<bool> ConfirmarEliminacion()
    {
        return await JSRuntime.InvokeAsync<bool>("confirm", "¿Deseas eliminar este pago?");
    }

    private async Task ExportarExcel()
    {
        var contenido = ExcelExportService.ExportPagosToExcel(ListaPagos, ListaCreditos, ListaLineas, ListaClientes);
        var nombreArchivo = $"Pagos_{DateTime.Now:yyyyMMdd_HHmmss}.xlsx";
        await DescargarArchivo(contenido, nombreArchivo);
    }

    private async Task DescargarArchivo(byte[] contenido, string nombreArchivo)
    {
        await JSRuntime.InvokeVoidAsync("downloadFile", nombreArchivo, Convert.ToBase64String(contenido));
    }

    private void AbrirImportador()
    {
        ArchivoSeleccionado = null;
        MensajeImportacion = "";
        MostrarImportador = true;
    }

    private void CerrarImportador()
    {
        MostrarImportador = false;
        ArchivoSeleccionado = null;
        MensajeImportacion = "";
    }

    private void ManejarCargaArchivo(InputFileChangeEventArgs e)
    {
        ArchivoSeleccionado = e.File;
    }

    private async Task ImportarPagosDesdeExcel()
    {
        if (ArchivoSeleccionado == null) return;

        try
        {
            using (var stream = ArchivoSeleccionado.OpenReadStream())
            {
                var (pagosImportados, mensaje) = await ExcelImportService.ImportPagosFromExcelAsync(stream, ListaCreditos);
                MensajeImportacion = mensaje;
                MensajeImportacionExito = pagosImportados.Count > 0;

                if (pagosImportados.Count > 0)
                {
                    foreach (var pago in pagosImportados)
                    {
                        await PagoService.AddAsync(pago);
                    }
                    await CargarDatos();

                    await Task.Delay(2000);
                    CerrarImportador();
                }
            }
        }
        catch (Exception ex)
        {
            MensajeImportacion = $"Error: {ex.Message}";
            MensajeImportacionExito = false;
        }
    }
}
