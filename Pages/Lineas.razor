@page "/lineas"
@using Microsoft.JSInterop
@using SisPrestamos.Model
@using SisPrestamos.Service
@inject ClienteService ClienteService
@inject LineaService LineaService
@inject ExcelExportService ExcelExportService
@inject ExcelImportService ExcelImportService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<div class="container-fluid p-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2>Gestión de Líneas de Crédito</h2>
            <button class="btn btn-success mb-3" @onclick="AbrirFormulario">Nueva Línea</button>
            <button class="btn btn-info mb-3 ms-2" @onclick="ExportarExcel">Exportar a Excel</button>
            <button class="btn btn-warning mb-3 ms-2" @onclick="AbrirImportador">Importar Excel</button>
        </div>
    </div>

    @if (MostrarImportador)
    {
        <div class="card mb-4">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">Importar Líneas de Crédito desde Excel</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-8">
                        <label class="form-label">Selecciona un archivo Excel</label>
                        <InputFile OnChange="ManejarCargaArchivo" accept=".xlsx,.xls" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <button type="button" class="btn btn-warning me-2" @onclick="ImportarLineasDesdeExcel" disabled="@(ArchivoSeleccionado == null)">Importar</button>
                        <button type="button" class="btn btn-secondary" @onclick="CerrarImportador">Cancelar</button>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(MensajeImportacion))
                {
                    <div class="alert @(MensajeImportacionExito ? "alert-success" : "alert-danger") mt-3" role="alert">
                        @MensajeImportacion
                    </div>
                }
            </div>
        </div>
    }

    @if (MostrarFormulario)
    {
        <div class="card mb-4">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">@(EdicionId > 0 ? "Editar Línea" : "Nueva Línea de Crédito")</h5>
            </div>
            <div class="card-body">
                <form>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Cliente</label>
                            <select class="form-select" @bind="FormularioLinea.ClienteId">
                                <option value="0">Seleccionar cliente...</option>
                                @foreach (var cliente in ListaClientes)
                                {
                                    <option value="@cliente.Id">@cliente.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Monto</label>
                            <input type="number" class="form-control" step="0.01" @bind="FormularioLinea.Monto" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <button type="button" class="btn btn-success me-2" @onclick="GuardarLinea">Guardar</button>
                            <button type="button" class="btn btn-secondary" @onclick="CerrarFormulario">Cancelar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Listado de Líneas</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Cliente</th>
                                    <th>Monto</th>
                                    <th>Fecha</th>
                                    <th>Hora</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var linea in ListaLineas)
                                {
                                    var cliente = ListaClientes.FirstOrDefault(c => c.Id == linea.ClienteId);
                                    <tr>
                                        <td>@linea.Id</td>
                                        <td>@cliente?.Name</td>
                                        <td>$@linea.Monto.ToString("F2")</td>
                                        <td>@linea.Fecha.ToShortDateString()</td>
                                        <td>@linea.Hora.ToString(@"hh\:mm\:ss")</td>
                                        <td>
                                            <button class="btn btn-sm btn-primary" @onclick="() => EditarLinea(linea)">Editar</button>
                                            <button class="btn btn-sm btn-danger" @onclick="() => EliminarLinea(linea.Id)">Eliminar</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<Cliente> ListaClientes = new();
    private List<Linea> ListaLineas = new();
    private Linea FormularioLinea = new();
    private bool MostrarFormulario = false;
    private bool MostrarImportador = false;
    private int EdicionId = 0;
    private IBrowserFile? ArchivoSeleccionado;
    private string MensajeImportacion = "";
    private bool MensajeImportacionExito = false;

    protected override async Task OnInitializedAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        ListaClientes = await ClienteService.GetAllAsync();
        ListaLineas = await LineaService.GetAllAsync();
    }

    private void AbrirFormulario()
    {
        FormularioLinea = new Linea();
        EdicionId = 0;
        MostrarFormulario = true;
    }

    private void CerrarFormulario()
    {
        MostrarFormulario = false;
        FormularioLinea = new Linea();
        EdicionId = 0;
    }

    private async Task GuardarLinea()
    {
        if (EdicionId > 0)
        {
            FormularioLinea.Id = EdicionId;
            await LineaService.UpdateAsync(FormularioLinea);
        }
        else
        {
            await LineaService.AddAsync(FormularioLinea);
        }
        await CargarDatos();
        CerrarFormulario();
    }

    private void EditarLinea(Linea linea)
    {
        FormularioLinea = new Linea
        {
            Id = linea.Id,
            ClienteId = linea.ClienteId,
            Monto = linea.Monto,
            Fecha = linea.Fecha,
            Hora = linea.Hora
        };
        EdicionId = linea.Id;
        MostrarFormulario = true;
    }

    private async Task EliminarLinea(int id)
    {
        if (await ConfirmarEliminacion())
        {
            await LineaService.DeleteAsync(id);
            await CargarDatos();
        }
    }

    private async Task<bool> ConfirmarEliminacion()
    {
        return await JSRuntime.InvokeAsync<bool>("confirm", "¿Deseas eliminar esta línea?");
    }

    private async Task ExportarExcel()
    {
        var contenido = ExcelExportService.ExportLineasToExcel(ListaLineas, ListaClientes);
        var nombreArchivo = $"Lineas_{DateTime.Now:yyyyMMdd_HHmmss}.xlsx";
        await DescargarArchivo(contenido, nombreArchivo);
    }

    private async Task DescargarArchivo(byte[] contenido, string nombreArchivo)
    {
        await JSRuntime.InvokeVoidAsync("downloadFile", nombreArchivo, Convert.ToBase64String(contenido));
    }

    private void AbrirImportador()
    {
        ArchivoSeleccionado = null;
        MensajeImportacion = "";
        MostrarImportador = true;
    }

    private void CerrarImportador()
    {
        MostrarImportador = false;
        ArchivoSeleccionado = null;
        MensajeImportacion = "";
    }

    private void ManejarCargaArchivo(InputFileChangeEventArgs e)
    {
        ArchivoSeleccionado = e.File;
    }

    private async Task ImportarLineasDesdeExcel()
    {
        if (ArchivoSeleccionado == null) return;

        try
        {
            using (var stream = ArchivoSeleccionado.OpenReadStream())
            {
                var (lineasImportadas, mensaje) = await ExcelImportService.ImportLineasFromExcelAsync(stream, ListaClientes);
                MensajeImportacion = mensaje;
                MensajeImportacionExito = lineasImportadas.Count > 0;

                if (lineasImportadas.Count > 0)
                {
                    foreach (var linea in lineasImportadas)
                    {
                        await LineaService.AddAsync(linea);
                    }
                    await CargarDatos();

                    await Task.Delay(2000);
                    CerrarImportador();
                }
            }
        }
        catch (Exception ex)
        {
            MensajeImportacion = $"Error: {ex.Message}";
            MensajeImportacionExito = false;
        }
    }
}
