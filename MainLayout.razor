@inherits LayoutComponentBase

<div class="layout-wrapper">
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-lg">
            <a class="navbar-brand" href="/">
                <span class="brand-icon">💼</span>
                <span class="brand-text">SisPrestamos</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Alternar navegación">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto nav-links">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <span>📊</span> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/clientes">
                            <span>👥</span> Clientes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/lineas">
                            <span>📈</span> Líneas
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/creditos">
                            <span>💳</span> Créditos
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/pagos">
                            <span>💰</span> Pagos
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="main-content">
        <div class="container-lg">
            @Body
        </div>
    </main>

    <footer class="footer">
        <div class="container-lg">
            <div class="footer-content">
                <p class="footer-text">© @{
                        DateTime.Now.Year.ToString();
                    } Sistema de Préstamos. Todos los derechos reservados.</p>
                <small class="footer-info">💾 Datos almacenados localmente • 📱 PWA Habilitado</small>
            </div>
        </div>
    </footer>
</div>
